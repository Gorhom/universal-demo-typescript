{
  "name": "universal-demo-typescript",
  "description": "A boilerplate showing how to achieve Universal Code-Splitting and Universal HMR with Webpack 4, Typescript, react-universal-component, webpack-flush-chunks and extract-css-chunks-webpack-plugin",
  "version": "3.0.0",
  "main": "src/server",
  "author": "James Gillmore <james@faceyspacey.com>",
  "contributors": [
    "Zackary Jackson <zackary.l.jackson@gmail.com> (https://github.com/ScriptedAlchemy)"
  ],
  "license": "MIT",
  "scripts": {
    "start": "yarn run start:dev",
    "start:dev": "npm run clean && cross-env NODE_ENV=development nodemon ./src/server",
    "start:prod": "npm run clean && cross-env NODE_ENV=production nodemon ./src/server",
    "build:ts": "tsc -p . --pretty",
    "watch:ts": "tsc -p . --pretty -w",
    "format": "prettier --write {.,**}/*.{ts,tsx} && tslint --fix -p . && prettier --single-quote --semi=false --write 'webpack/*.js' && eslint --fix webpack",
    "clean": "rimraf build",
    "precommit": "lint-staged",
    "cm": "git-cz"
  },
  "dependencies": {
    "colors": "^1.3.2",
    "express": "^4.16.3",
    "express-no-favicons": "^0.0.1",
    "extract-css-chunks-webpack-plugin": "^3.1.3",
    "history": "^4.7.2",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-universal-component": "^3.0.3",
    "tslint": "^5.11.0",
    "webpack-dev-middleware": "^3.4.0",
    "webpack-flush-chunks": "^2.0.3"
  },
  "devDependencies": {
    "@types/colors": "^1.2.1",
    "@types/express": "^4.16.0",
    "@types/history": "^4.7.2",
    "@types/node": "^10.12.11",
    "@types/react": "^16.7.9",
    "@types/react-dom": "^16.0.11",
    "@types/stylus": "^0.48.30",
    "@types/webpack": "^4.4.20",
    "awesome-typescript-loader": "^5.2.1",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-loader": "^7.1.5",
    "babel-plugin-universal-import": "^3.1.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-watch": "^2.0.7",
    "commitizen": "^2.10.1",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.0",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-plugin-flowtype": "^2.50.3",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^0.14.3",
    "lint-staged": "^4.2.3",
    "nodemon": "^1.18.7",
    "poststylus": "^1.0.0",
    "prettier": "^1.14.3",
    "react-hot-loader": "^4.3.11",
    "rimraf": "^2.6.2",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "travis-github-status": "^1.6.3",
    "ts-lint": "^4.5.1",
    "ts-node": "^7.0.1",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.1",
    "webpack": "4.16.1",
    "webpack-hot-middleware": "^2.24.2",
    "webpack-hot-server-middleware": "^0.5.0",
    "write-file-webpack-plugin": "^4.5.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "prettier --single-quote --semi=false --write",
        "eslint --fix",
        "git add"
      ],
      "*.{ts,tsx}": [
        "prettier --write",
        "tslint --fix",
        "git add"
      ]
    }
  }
}
